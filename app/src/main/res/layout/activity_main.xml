<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Registration Form"
        android:textAlignment="center"
        android:textSize="18dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_below="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_above="@+id/btn"
        app:layout_constraintTop_toBottomOf="@+id/textView2">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <EditText
        android:id="@+id/firstnametv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter first name"/>
    <EditText
        android:id="@+id/lastnametv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter last name"/>
    <EditText
        android:id="@+id/dob"
        android:layout_width="match_parent"
        android:focusable="false"
        android:layout_height="wrap_content"
        android:hint="Select DOB"/>
    <Spinner
        android:id="@+id/gender"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tVSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Select Skills"/>


    <CheckBox
        android:id="@+id/checkBoxFlutter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flutter"/>

    <CheckBox
        android:id="@+id/checkBoxKotlin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kotlin"/>

    <CheckBox
        android:id="@+id/checkBoxJava"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Java"/>

    <CheckBox
        android:id="@+id/checkBoxAndroidSDK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android SDK"/>

    <CheckBox
        android:id="@+id/checkBoxSwift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swift"/>

    <CheckBox
        android:id="@+id/checkBoxGit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GIT"/>

    <CheckBox
        android:id="@+id/checkBoxNodeJs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NodeJs"/>

    <EditText
        android:id="@+id/emailet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter email address"/>

    <EditText
        android:id="@+id/mobet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter mobile number"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Enter password"/>

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="Confirm password"/>





</LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Signup"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:textAllCaps="false"/>

</RelativeLayout>